html, body { 
	margin: 0; 
	padding:0;
	background-image: url('WebsiteImages/Background.png');
	cursor: url('WebsiteImages/Cursor.png'), auto;
}

a:hover {
	cursor: url('WebsiteImages/BlueCursor.png'), auto;
}

#PageTopDiv {
	background-color: #2C2C2C;
	height: 400px;
	margin-top: -35px;
}

#PageHeading {
	  text-align: center;
	  color: #FFFFFF;
	  font-size: 50px;
	  padding-top: 80px;
}

#LinkHeading {
	text-align: center;
}

#PageLink {
	color: #FFFFFF;
}

#PageContent {

}

#ProjectsHeader {
	color: #741b47;
	text-align: center;
	font-size: 50px;
}

#ProjectNameHeader {
	color: #741b47;
	text-align: center;
	font-size: 40px;
}

#ProjectText {
	font-size: 20px;
	padding-left: 30px;
	padding-right: 30px;
}

#MonsterCorridor {
	Height: 50%;
	Width: 50%;
	transition: transform .2s;
}

#MonsterCorridor:Hover {
	transform: scale(1.5);
}